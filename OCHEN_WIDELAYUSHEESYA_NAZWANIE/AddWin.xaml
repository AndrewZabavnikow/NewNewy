<Window x:Class="OCHEN_WIDELAYUSHEESYA_NAZWANIE.AddWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCHEN_WIDELAYUSHEESYA_NAZWANIE"
        mc:Ignorable="d"
        Title="AddWin" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Имя" Grid.Column="0" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Right"/>
        <TextBox x:Name="One" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Top" Margin="10"/>
        <TextBlock Text="Фамилия" Grid.Column="0" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Right"/>
        <TextBox x:Name="Two" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" Margin="10"/>
        <Button x:Name="AddBtn" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="AddBtn_Click" Content="Добавить" Margin="40"/>
    </Grid>
</Window>
